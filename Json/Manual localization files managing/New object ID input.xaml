<Window x:Class="LC_Localization_Task_Absolute.Json.Manual_localization_files_managing.ObjectIDInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:Terminus="clr-namespace:LC_Localization_Task_Absolute.UITranslationHandlers"
        xmlns:local="clr-namespace:LC_Localization_Task_Absolute.Json.Manual_localization_files_managing"
		WindowStartupLocation="CenterScreen"
		ResizeMode="CanMinimize"
		Width="280" Height="76"
		Topmost="True"
		Title="{DynamicResource Caption_ObjectIDInputDialog}"
		Background="#1f1f1f">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/UI/Visual Studio ControlTemplates/Button.xaml" />
				<ResourceDictionary Source="/UI/Visual Studio ControlTemplates/TextBox.xaml" />
				<ResourceDictionary Source="/UI/Visual Studio ControlTemplates/Border.xaml" />
				<ResourceDictionary Source="/UI/Visual Studio ControlTemplates/ContextMenu.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="{x:Type Terminus:UITranslation_Mint}" />
		</ResourceDictionary>
	</Window.Resources>
	<Grid Margin="3 2 3 2">
		<Terminus:UITranslation_Mint
			x:Name="ObjectIDInput"
			TextChanged="ObjectIDInput_TextChanged"
			PreviewKeyDown="ObjectIDInput_PreviewKeyDown"
			Height="34"
			Margin="0 0 39 0"
			FontFamily="/UI/Fonts/#GOST Type BU"
			FontSize="24"
			VerticalContentAlignment="Center"
			ContextMenu="{x:Null}"
			FontWeight="Bold" />
		<Button
			x:Name="ConfirmInput"
			Click="ConfirmInput_Click"
			IsEnabled="False"
			Width="34"
			Height="34"
			FontFamily="/UI/Fonts/#Segoe Fluent Icons"
			Content=""
			FontSize="22"
			HorizontalAlignment="Right" />
	</Grid>
</Window>
