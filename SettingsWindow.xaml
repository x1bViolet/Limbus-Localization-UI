<Window
	x:Class="LC_Localization_Task_Absolute.SettingsWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:LC_Localization_Task_Absolute"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
	Title="Settings"
	Width="420"
	Height="495"
	AllowsTransparency="True"
	Closing="Window_Closing"
	Opacity="1"
	ResizeMode="NoResize"
	Topmost="True"
	WindowStyle="None"
	mc:Ignorable="d">
	<WindowChrome.WindowChrome>
		<WindowChrome CaptionHeight="1" CornerRadius="0" GlassFrameThickness="1" ResizeBorderThickness="1" />
	</WindowChrome.WindowChrome>
	<Window.Clip>
		<RectangleGeometry x:Name="NewWindowSizes" RadiusX="3" RadiusY="3" Rect="0, 0, 420, 495" />
	</Window.Clip>
	<Window.Resources>
		<!--    Something for styles    -->
		<Color x:Key="ControlLightColor">#FF25242B</Color>
		<Color x:Key="ControlMediumColor">#FF25242B</Color>
		<Color x:Key="ControlDarkColor">#FF211AA9</Color>
		<Color x:Key="GlyphColor">#FF444444</Color>
		<Color x:Key="BorderLightColor">#3c3b36</Color>
		<Color x:Key="BorderMediumColor">#3c3b36</Color>
		<Color x:Key="BorderDarkColor">#FF444444</Color>

		<Style x:Key="ScrollBarLineButton" TargetType="{x:Type RepeatButton}">
			<Setter Property="SnapsToDevicePixels" Value="False" />
			<Setter Property="OverridesDefaultStyle" Value="true" />
			<Setter Property="Focusable" Value="false" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type RepeatButton}">
						<Border x:Name="Border" Margin="1" BorderThickness="1" CornerRadius="2">
							<Border.BorderBrush>
								<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
									<LinearGradientBrush.GradientStops>
										<GradientStopCollection>
											<GradientStop Offset="0.0" Color="{DynamicResource BorderMediumColor}" />
											<GradientStop Offset="1.0" Color="{DynamicResource BorderDarkColor}" />
										</GradientStopCollection>
									</LinearGradientBrush.GradientStops>
								</LinearGradientBrush>
							</Border.BorderBrush>
							<Border.Background>
								<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
									<LinearGradientBrush.GradientStops>
										<GradientStopCollection>
											<GradientStop Color="{DynamicResource ControlLightColor}" />
											<GradientStop Offset="1.0" Color="{DynamicResource ControlMediumColor}" />
										</GradientStopCollection>
									</LinearGradientBrush.GradientStops>
								</LinearGradientBrush>
							</Border.Background>
							<Path x:Name="Arrow" HorizontalAlignment="Center" VerticalAlignment="Center" Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}">
								<Path.Fill>
									<SolidColorBrush Color="{DynamicResource GlyphColor}" />
								</Path.Fill>
							</Path>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="ScrollBarPageButton" TargetType="{x:Type RepeatButton}">
			<Setter Property="SnapsToDevicePixels" Value="True" />
			<Setter Property="OverridesDefaultStyle" Value="true" />
			<Setter Property="IsTabStop" Value="false" />
			<Setter Property="Focusable" Value="false" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type RepeatButton}">
						<Border Background="Transparent" />
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
			<Setter Property="SnapsToDevicePixels" Value="True" />
			<Setter Property="OverridesDefaultStyle" Value="true" />
			<Setter Property="IsTabStop" Value="false" />
			<Setter Property="Focusable" Value="false" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Thumb}">
						<Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="2" />
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition MaxHeight="18" />
					<RowDefinition Height="0.00001*" />
					<RowDefinition MaxHeight="18" />
				</Grid.RowDefinitions>
				<Border
					Grid.RowSpan="3"
					Width="2"
					Margin="0 10 0 10"
					Background="#3c3b36"
					CornerRadius="2" />
				<RepeatButton
					Grid.Row="0"
					Height="18"
					Command="ScrollBar.LineUpCommand"
					Content="M 0 4 L 8 4 L 4 0 Z"
					Style="{StaticResource ScrollBarLineButton}" />
				<Track x:Name="PART_Track" Grid.Row="1" IsDirectionReversed="true">
					<Track.DecreaseRepeatButton>
						<RepeatButton Command="ScrollBar.PageUpCommand" Style="{StaticResource ScrollBarPageButton}" />
					</Track.DecreaseRepeatButton>
					<Track.Thumb>
						<Thumb Margin="1 0 1 0" Style="{StaticResource ScrollBarThumb}">
							<Thumb.BorderBrush>

								<LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
									<LinearGradientBrush.GradientStops>
										<GradientStopCollection>
											<GradientStop Offset="0.0" Color="{DynamicResource BorderLightColor}" />
											<GradientStop Offset="1.0" Color="{DynamicResource BorderDarkColor}" />
										</GradientStopCollection>
									</LinearGradientBrush.GradientStops>
								</LinearGradientBrush>

							</Thumb.BorderBrush>
							<Thumb.Background>

								<LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
									<LinearGradientBrush.GradientStops>
										<GradientStopCollection>
											<GradientStop Offset="0.0" Color="{DynamicResource ControlLightColor}" />
											<GradientStop Offset="1.0" Color="{DynamicResource ControlMediumColor}" />
										</GradientStopCollection>
									</LinearGradientBrush.GradientStops>
								</LinearGradientBrush>

							</Thumb.Background>
						</Thumb>
					</Track.Thumb>
					<Track.IncreaseRepeatButton>
						<RepeatButton Command="ScrollBar.PageDownCommand" Style="{StaticResource ScrollBarPageButton}" />
					</Track.IncreaseRepeatButton>
				</Track>
				<RepeatButton
					Grid.Row="2"
					Height="18"
					Command="ScrollBar.LineDownCommand"
					Content="M 0 0 L 4 4 L 8 0 Z"
					Style="{StaticResource ScrollBarLineButton}" />
			</Grid>
		</ControlTemplate>

		<ControlTemplate x:Key="HorizontalScrollBar" TargetType="{x:Type ScrollBar}">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition MaxWidth="18" />
					<ColumnDefinition Width="0.00001*" />
					<ColumnDefinition MaxWidth="18" />
				</Grid.ColumnDefinitions>
				<Border Grid.ColumnSpan="3" Background="#F0F0F0" CornerRadius="2" />
				<RepeatButton
					Grid.Column="0"
					Width="18"
					Command="ScrollBar.LineLeftCommand"
					Content="M 4 0 L 4 8 L 0 4 Z"
					Style="{StaticResource ScrollBarLineButton}" />
				<Track x:Name="PART_Track" Grid.Column="1" IsDirectionReversed="False">
					<Track.DecreaseRepeatButton>
						<RepeatButton Command="ScrollBar.PageLeftCommand" Style="{StaticResource ScrollBarPageButton}" />
					</Track.DecreaseRepeatButton>
					<Track.Thumb>
						<Thumb Margin="0 1 0 1" Style="{StaticResource ScrollBarThumb}">

							<Thumb.BorderBrush>

								<LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
									<LinearGradientBrush.GradientStops>
										<GradientStopCollection>
											<GradientStop Offset="0.0" Color="{DynamicResource BorderLightColor}" />
											<GradientStop Offset="1.0" Color="{DynamicResource BorderDarkColor}" />
										</GradientStopCollection>
									</LinearGradientBrush.GradientStops>
								</LinearGradientBrush>

							</Thumb.BorderBrush>
							<Thumb.Background>

								<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
									<LinearGradientBrush.GradientStops>
										<GradientStopCollection>
											<GradientStop Offset="0.0" Color="{DynamicResource ControlLightColor}" />
											<GradientStop Offset="1.0" Color="{DynamicResource ControlMediumColor}" />
										</GradientStopCollection>
									</LinearGradientBrush.GradientStops>
								</LinearGradientBrush>

							</Thumb.Background>
						</Thumb>
					</Track.Thumb>
					<Track.IncreaseRepeatButton>
						<RepeatButton Command="ScrollBar.PageRightCommand" Style="{StaticResource ScrollBarPageButton}" />
					</Track.IncreaseRepeatButton>
				</Track>
				<RepeatButton
					Grid.Column="2"
					Width="18"
					Command="ScrollBar.LineRightCommand"
					Content="M 0 0 L 4 4 L 0 8 Z"
					Style="{StaticResource ScrollBarLineButton}" />
			</Grid>
		</ControlTemplate>

		<Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
			<Setter Property="SnapsToDevicePixels" Value="True" />
			<Setter Property="OverridesDefaultStyle" Value="true" />
			<Style.Triggers>
				<Trigger Property="Orientation" Value="Horizontal">
					<Setter Property="Width" Value="Auto" />
					<Setter Property="Height" Value="18" />
					<Setter Property="Template" Value="{StaticResource HorizontalScrollBar}" />
				</Trigger>
				<Trigger Property="Orientation" Value="Vertical">
					<Setter Property="Width" Value="18" />
					<Setter Property="Height" Value="Auto" />
					<Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
				</Trigger>
			</Style.Triggers>
		</Style>




		<ControlTemplate x:Key="ComboBoxToggleButton" TargetType="{x:Type ToggleButton}">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition Width="20" />
				</Grid.ColumnDefinitions>
				<Border
					x:Name="Border"
					Grid.ColumnSpan="2"
					Background="#FF333333"
					BorderBrush="#FF333333"
					BorderThickness="2"
					CornerRadius="2" />
				<Border Grid.Column="0" Margin="2" CornerRadius="2,0,0,2">
					<Border.Background>
						<SolidColorBrush Color="#FF191919" />
					</Border.Background>
				</Border>
				<Path
					x:Name="Arrow"
					Grid.Column="1"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Data="M 0 0 L 4 4 L 8 0 Z">
					<Path.Fill>
						<SolidColorBrush Color="#FF191919" />
					</Path.Fill>
				</Path>
			</Grid>
		</ControlTemplate>

		<ControlTemplate x:Key="ComboBoxTextBox" TargetType="{x:Type TextBox}">
			<Border x:Name="PART_ContentHost" Background="{TemplateBinding Background}" Focusable="False" />
		</ControlTemplate>

		<Style x:Key="{x:Type ComboBox}" TargetType="{x:Type ComboBox}">
			<Setter Property="SnapsToDevicePixels" Value="False" />
			<Setter Property="MaxHeight" Value="26.4" />
			<Setter Property="Height" Value="26.4" />
			<Setter Property="OverridesDefaultStyle" Value="true" />
			<Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
			<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
			<Setter Property="ScrollViewer.CanContentScroll" Value="true" />
			<Setter Property="MinWidth" Value="120" />
			<Setter Property="MinHeight" Value="20" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type ComboBox}">
						<Grid>
							<ToggleButton
								x:Name="ToggleButton"
								Grid.Column="2"
								ClickMode="Press"
								Focusable="false"
								IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
								Template="{StaticResource ComboBoxToggleButton}" />
							<ContentPresenter
								x:Name="ContentSite"
								Margin="5 4 23 3"
								HorizontalAlignment="Left"
								VerticalAlignment="Stretch"
								Content="{TemplateBinding SelectionBoxItem}"
								ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
								ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
								IsHitTestVisible="False" />
							<TextBox
								x:Name="PART_EditableTextBox"
								Margin="3 3 23 3"
								HorizontalAlignment="Left"
								VerticalAlignment="Bottom"
								Background="Transparent"
								Focusable="True"
								IsReadOnly="{TemplateBinding IsReadOnly}"
								Style="{x:Null}"
								Template="{StaticResource ComboBoxTextBox}"
								Visibility="Hidden" />
							<Popup
								x:Name="Popup"
								AllowsTransparency="True"
								Focusable="False"
								IsOpen="{TemplateBinding IsDropDownOpen}"
								Placement="Bottom"
								PopupAnimation="Fade">
								<Grid x:Name="DropDown" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="10000" SnapsToDevicePixels="True">
									<Border x:Name="DropDownBorder" BorderThickness="2">
										<Border.BorderBrush>
											<SolidColorBrush Color="#FF333333" />
										</Border.BorderBrush>
										<Border.Background>
											<SolidColorBrush Color="#FF191919" />
										</Border.Background>
									</Border>
									<ScrollViewer Margin="4 6 4 6" SnapsToDevicePixels="True">
										<StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
									</ScrollViewer>
								</Grid>
							</Popup>
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger Property="HasItems" Value="false">
								<Setter TargetName="DropDownBorder" Property="MinHeight" Value="95" />
							</Trigger>
							<Trigger Property="IsGrouping" Value="true">
								<Setter Property="ScrollViewer.CanContentScroll" Value="false" />
							</Trigger>
							<Trigger SourceName="Popup" Property="AllowsTransparency" Value="true">
								<Setter TargetName="DropDownBorder" Property="CornerRadius" Value="4" />
								<Setter TargetName="DropDownBorder" Property="Margin" Value="0 2 0 0" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="{x:Type ComboBoxItem}" TargetType="{x:Type ComboBoxItem}">
			<Setter Property="SnapsToDevicePixels" Value="true" />
			<Setter Property="OverridesDefaultStyle" Value="true" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type ComboBoxItem}">
						<Border x:Name="Border" Padding="2" SnapsToDevicePixels="true">
							<ContentPresenter />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>





		<Style x:Key="BorderButton" TargetType="Border">
			<Setter Property="Background" Value="#FF191919" />
			<Setter Property="BorderBrush" Value="#FF333333" />
			<Setter Property="CornerRadius" Value="2" />
			<Setter Property="BorderThickness" Value="2" />
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FF313030" />
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style x:Key="Header_r" TargetType="local:UITranslation_Rose">
			<Setter Property="Foreground" Value="#dedede" />
			<Setter Property="Padding" Value="6 0 0 0" />
		</Style>
		<Style x:Key="SubName_r" TargetType="local:UITranslation_Rose">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="Padding" Value="6 0 0 0" />
			<Setter Property="Foreground" Value="#dedede" />
		</Style>
		<Style x:Key="TB_ShutdownHighlight" TargetType="Border">
			<Setter Property="Background" Value="Transparent" />
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FFA52C42" />
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style x:Key="TB_Highlight" TargetType="Border">
			<Setter Property="Background" Value="Transparent" />
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FF302829" />
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style x:Key="ButtonInner" TargetType="TextBlock">
			<Setter Property="FontFamily" Value="/UI/Fonts/#Segoe Fluent Icons" />
			<Setter Property="HorizontalAlignment" Value="Center" />
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="FontSize" Value="19" />
			<Setter Property="Foreground" Value="#FFDEDEDE" />
		</Style>
		<Style x:Key="InputText" TargetType="TextBox">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="FontSize" Value="18" />
			<Setter Property="Foreground" Value="#FFDEDEDE" />
			<Setter Property="SelectionBrush" Value="#FFDEDEDE" />
			<Setter Property="CaretBrush" Value="#FFDEDEDE" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="Margin" Value="0 1 0 0" />
			<Setter Property="VerticalScrollBarVisibility" Value="Disabled" />
		</Style>
		<Style x:Key="InputText_m" TargetType="local:UITranslation_Mint">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="FontSize" Value="18" />
			<Setter Property="Foreground" Value="#FFDEDEDE" />
			<Setter Property="SelectionBrush" Value="#FFDEDEDE" />
			<Setter Property="CaretBrush" Value="#FFDEDEDE" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="Margin" Value="0 1 0 0" />
			<Setter Property="VerticalScrollBarVisibility" Value="Disabled" />
		</Style>
		<Style x:Key="CommentSection_r" TargetType="local:UITranslation_Rose">
			<Setter Property="FontSize" Value="14" />
			<Setter Property="Padding" Value="6 5 0 0" />
			<Setter Property="Foreground" Value="#FFC7BCBC" />
		</Style>




	</Window.Resources>
	<Grid Background="#FF191818">
		<Border Panel.ZIndex="1000" BorderBrush="#FF3A3A3A" BorderThickness="1" CornerRadius="5 5 5 5">
			<Grid x:Name="UIGrid" Panel.ZIndex="-1">
				<Grid.RowDefinitions>
					<RowDefinition Height="34" />
					<RowDefinition />
				</Grid.RowDefinitions>
				<Border
					x:Name="Settings_TitleBar"
					Grid.Row="0"
					Background="#FF101117"
					CornerRadius="5 5 0 0"
					MouseLeftButtonDown="Window_DragMove">
					<Grid x:Name="TitleBar">
						<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
							<Border
								x:Name="MinimizeButton"
								MinWidth="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
								Margin="1"
								CornerRadius="5"
								PreviewMouseLeftButtonDown="Settings_Minimize"
								Style="{StaticResource TB_Highlight}">
								<TextBlock
									HorizontalAlignment="Center"
									VerticalAlignment="Bottom"
									FontFamily="UI\Fonts\#Segoe Fluent Icons"
									FontSize="20"
									Foreground="#FF9D9D9D">
									
								</TextBlock>
							</Border>
							<Border
								x:Name="SettingsButton"
								MinWidth="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
								Margin="1"
								CornerRadius="5"
								PreviewMouseLeftButtonDown="Settings_ReloadConfig"
								Style="{StaticResource TB_Highlight}"
								Visibility="Visible">
								<TextBlock
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									FontFamily="UI\Fonts\#Segoe Fluent Icons"
									FontSize="20"
									Foreground="#FF9D9D9D">
									
								</TextBlock>
							</Border>
							<Border
								x:Name="ShutdownButton"
								MinWidth="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
								Margin="1"
								CornerRadius="5"
								PreviewMouseLeftButtonDown="Settings_Close"
								Style="{StaticResource TB_ShutdownHighlight}">
								<TextBlock
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									FontFamily="UI\Fonts\#Segoe Fluent Icons"
									FontSize="20"
									Foreground="#FF9D9D9D">
									
								</TextBlock>
							</Border>
						</StackPanel>
					</Grid>
				</Border>
				<Border x:Name="Settings_MainGrid" Grid.Row="1">
					<ScrollViewer Margin="5">
						<StackPanel x:Name="SettingsList" Margin="0 0 10 0">
							<Grid x:Name="SH_Internal">
								<StackPanel>
									<StackPanel x:Name="SECTION_Limbus_Preview" Visibility="Visible">
										<local:UITranslation_Rose
											x:Name="STE_Settings_LimbusPreview_SectionName"
											FontSize="26"
											RichText="⦁ Limbus Preview"
											Style="{StaticResource Header_r}"
											UID="[Settings / Limbus Preview] * Section Name" />
										<StackPanel Margin="6 0 0 0">
											<Grid Margin="0 5 0 0">
												<Grid.ColumnDefinitions>
													<ColumnDefinition />
													<ColumnDefinition />
												</Grid.ColumnDefinitions>
												<local:UITranslation_Rose
													Grid.Column="0"
													VerticalAlignment="Center"
													FontSize="16"
													RichText="Enable Syntax Highlight"
													Style="{StaticResource SubName_r}"
													UID="[Settings / Limbus Preview] * Toggle Syntax Highlight" />
												<Border
													Grid.Column="1"
													Width="26.4"
													Height="26.4"
													HorizontalAlignment="Left"
													x:Name="ToggleSyntaxHighlight"
													PreviewMouseLeftButtonUp="OptionToggle"
													Style="{StaticResource BorderButton}">
													<TextBlock x:Name="ToggleSyntaxHighlight_I" Style="{StaticResource ButtonInner}">
														
													</TextBlock>
												</Border>
											</Grid>
											<Grid Margin="0 5 0 0">
												<Grid.ColumnDefinitions>
													<ColumnDefinition />
													<ColumnDefinition />
												</Grid.ColumnDefinitions>
												<local:UITranslation_Rose
													Grid.Column="0"
													VerticalAlignment="Center"
													FontSize="16"
													RichText="Hide Limbus Text Preview"
													Style="{StaticResource SubName_r}"
													UID="[Settings / Limbus Preview] * Hide Limbus Text Preview" /> 
												<Border
													Grid.Column="1"
													Width="26.4"
													Height="26.4"
													HorizontalAlignment="Left"
													x:Name="HideLimbusPreview"
													PreviewMouseLeftButtonUp="OptionToggle"
													Style="{StaticResource BorderButton}">
													<TextBlock x:Name="HideLimbusPreview_I" Style="{StaticResource ButtonInner}">
														
													</TextBlock>
												</Border>
											</Grid>
											<Grid Margin="0 5 0 0">
												<Grid.ColumnDefinitions>
													<ColumnDefinition />
													<ColumnDefinition />
												</Grid.ColumnDefinitions>
												<local:UITranslation_Rose
													x:Name="STE_Settings_LimbusPreview_HighlightStyle"
													Grid.Column="0"
													VerticalAlignment="Center"
													FontSize="16"
													RichText="Highlight &lt;​style&gt;"
													Style="{StaticResource SubName_r}"
													UID="[Settings / Limbus Preview] * Highlight style" /> 
												<!--    zwsp before style word    -->
												<Border
													x:Name="ToggleStyleHighlightion"
													Grid.Column="1"
													Width="26.4"
													Height="26.4"
													HorizontalAlignment="Left"
													PreviewMouseLeftButtonUp="OptionToggle"
													Style="{StaticResource BorderButton}">
													<TextBlock x:Name="ToggleStyleHighlightion_I" Style="{StaticResource ButtonInner}">
														
													</TextBlock>
												</Border>
											</Grid>
											<Grid Margin="0 5 0 0">
												<Grid.ColumnDefinitions>
													<ColumnDefinition />
													<ColumnDefinition />
												</Grid.ColumnDefinitions>
												<local:UITranslation_Rose
													x:Name="STE_Settings_LimbusPreview_HighlightSkillDescsOnClick"
													Grid.Column="0"
													FontSize="16"
													VerticalAlignment="Center"
													RichText="Highlight Skill Descs on right click"
													Style="{StaticResource SubName_r}"
