	<Window.Triggers>
		<EventTrigger RoutedEvent="Window.Loaded">
			<BeginStoryboard>
				<Storyboard>
					<DoubleAnimation
						AutoReverse="False"
						RepeatBehavior="1x"
						SpeedRatio="4.86"
						Storyboard.TargetProperty="(Window.Opacity)"
						From="0.0"
						To="1.0"
						Duration="0:0:0:01" />
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</Window.Triggers>
	<WindowChrome.WindowChrome>
		<WindowChrome CaptionHeight="1" ResizeBorderThickness="0" />
	</WindowChrome.WindowChrome>

	<Window.Resources>

