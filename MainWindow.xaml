										SelectionForeground="{DynamicResource Theme:JsonTextEditor.Selection.Foreground}"
										ShowLineNumbers="{DynamicResource Theme:JsonTextEditor.ShowLineNumbers}"
										TextChanged="TextEditor_TextChanged"
										VerticalScrollBarVisibility="Hidden">
