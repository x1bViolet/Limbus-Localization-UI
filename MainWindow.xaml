<!-- WindowStartupLocation="CenterScreen" -->
<Window x:Class="LC_Localization_Task_Absolute.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LC_Localization_Task_Absolute"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
        
        mc:Ignorable="d"
        Title="LC Localization Interface"
        WindowStyle="None"
        
		WindowStartupLocation="CenterOwner"
        
        ResizeMode="CanResizeWithGrip"
        Opacity="1" AllowsTransparency="True"
        
        Height="816"
        Width="1535"
        
        Loaded="Window_Loaded"
        
        MinHeight="425"
        MinWidth="710.5"
        MaxWidth="1920"
        
        
        Topmost="True"
        
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewKeyUp="Window_PreviewKeyUp"
        
        SizeChanged="Window_SizeChanged">
	<Window.Triggers>
		<EventTrigger RoutedEvent="Window.Loaded">
			<BeginStoryboard>
				<Storyboard>
					<DoubleAnimation
						Storyboard.TargetProperty="(Window.Opacity)"
						SpeedRatio="4.86"
						From="0.0" To="1.0" Duration="0:0:0:01"
						AutoReverse="False" RepeatBehavior="1x"/>
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</Window.Triggers>
	<WindowChrome.WindowChrome>
		<WindowChrome
            ResizeBorderThickness="0"
            CaptionHeight="1"/>
	</WindowChrome.WindowChrome>
	<Window.Clip>
		<RectangleGeometry x:Name="NewWindowSizes" Rect="0, 0, 1536, 816"/>
	</Window.Clip>
	<Window.Resources>
		<SolidColorBrush x:Key="UITheme_EditorContextMenu_Border" Color="#FF483C41"/>
		<SolidColorBrush x:Key="UITheme_EditorContextMenu_Background" Color="#E5241C1C"/>
		<SolidColorBrush x:Key="UITheme_EditorContextMenu_BackgroundHighlighted" Color="#E53C2F2F"/>
		<SolidColorBrush x:Key="UITheme_EditorContextMenu_FontColor" Color="#ABA193"/>

		<CornerRadius x:Key="UITheme_EditorContextMenu_CornerRadius">0.5</CornerRadius>
		<FontFamily x:Key="UITheme_EditorContextMenu_FontFamily">Arial</FontFamily>
		<FontWeight x:Key="UITheme_EditorContextMenu_FontWeight">Regular</FontWeight>


		<SolidColorBrush x:Key="UITheme_ObjectNameColor" Color="#FFE9DBC6"/>
		<SolidColorBrush x:Key="UITheme_DefaultTextfiledColor" Color="#FFC4B0B6"/>
		<SolidColorBrush x:Key="UITheme_DefaultTextfiledSelectionBrush" Color="#ABD4D4D4"/>
		<SolidColorBrush x:Key="UITheme_DefaultTextfiledCaretBrush" Color="#FFE9DBC6"/>

		<SolidColorBrush x:Key="UITheme_DefaultTextColor" Color="#FFC4B0B6"/>
		<SolidColorBrush x:Key="UITheme_DefaultShadowTextColor" Color="#FF58424A"/>


		<SolidColorBrush x:Key="UITheme_DefaultButtonIconsColor" Color="#FFC4B0B6"/>

		<SolidColorBrush x:Key="UITheme_NavigationPanelBackground" Color="#55222222"/>

		<SolidColorBrush x:Key="UITheme_ButtonsBackground" Color="#E5241C1C"/>
		<SolidColorBrush x:Key="UITheme_ButtonsBackgroundHighlighted" Color="#E53A2D2D"/>
		<SolidColorBrush x:Key="UITheme_ButtonsBorder" Color="#FF483C41"/>


		<SolidColorBrush x:Key="UITheme_ButtonsDisableCover" Color="#77000000"/>
		<CornerRadius x:Key="UITheme_ButtonsCornerRadius">2</CornerRadius>
		<Thickness x:Key="UITheme_ButtonsBorderThickness">1.7</Thickness>

		<SolidColorBrush x:Key="UITheme_BordersBackground" Color="#E5241C1C"/>
		<SolidColorBrush x:Key="UITheme_BordersBorderColor" Color="#FF483C41"/>
		<CornerRadius x:Key="UITheme_BordersCornerRadius">2</CornerRadius>
		<Thickness x:Key="UITheme_BordersBorderThickness">1.7</Thickness>

		<FontFamily x:Key="BebasKaiUniversal">pack://application:,,,/UI/Fonts/#Bebas Neue Cyrillic</FontFamily>

		<!--#region all the styles except slider -->
		<Style TargetType="Border" x:Key="TB_ShutdownHighlight">
			<Setter Property="Background" Value="Transparent"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FFA52C42"/>
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style TargetType="Border" x:Key="TB_Highlight">
			<Setter Property="Background" Value="Transparent"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FF302829"/>
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style TargetType="RichTextBox">
			<Setter Property="Focusable" Value="False"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="IsHitTestVisible" Value="False"/>
		</Style>

		<Style TargetType="TextBox" x:Key="TextBoxDefaultDesk">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="CaretBrush" Value="{DynamicResource UITheme_DefaultTextfiledCaretBrush}"/>
			<Setter Property="SelectionBrush" Value="{DynamicResource UITheme_DefaultTextfiledSelectionBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource UITheme_DefaultTextfiledColor}"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="FontSize" Value="20"/>
		</Style>
		<Style TargetType="TextBlock" x:Key="TextBlockDefaultDesk">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="#FFC4B0B6"/>
			<Setter Property="FontSize" Value="20"/>
		</Style>

		<Style TargetType="Border" x:Key="ButtonDefaultDeskHighlightable">
			<Setter Property="Background" Value="{DynamicResource UITheme_ButtonsBackground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource UITheme_ButtonsBorder}"/>
			<Setter Property="CornerRadius" Value="{DynamicResource UITheme_ButtonsCornerRadius}"/>
			<Setter Property="BorderThickness" Value="{DynamicResource UITheme_ButtonsBorderThickness}"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="{DynamicResource UITheme_ButtonsBackgroundHighlighted}"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="Border" x:Key="ButtonDefaultDeskHighlightableDefault">
			<Setter Property="Background" Value="#FF202020"/>
			<Setter Property="BorderBrush" Value="#393939"/>
			<Setter Property="CornerRadius" Value="1"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FF272529"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="Border" x:Key="BorderDefaultDesk">
			<Setter Property="Background" Value="{DynamicResource UITheme_BordersBackground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource UITheme_BordersBorderColor}"/>
			<Setter Property="CornerRadius" Value="{DynamicResource UITheme_BordersCornerRadius}"/>
			<Setter Property="BorderThickness" Value="{DynamicResource UITheme_BordersBorderThickness}"/>
		</Style>
		<Style TargetType="Border" x:Key="Button_DisableCover">
			<Setter Property="Background" Value="{DynamicResource UITheme_ButtonsDisableCover}"/>
			<Setter Property="CornerRadius" Value="{DynamicResource UITheme_ButtonsCornerRadius}"/>
			<Setter Property="BorderThickness" Value="0"/>
		</Style>
		<Style TargetType="RichTextBox" x:Key="CoinDesc">
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="#ebcaa2"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="FontFamily" Value="UI/Fonts/#Pretendard"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="IsReadOnly" Value="True"/>
			<EventSetter Event="PreviewMouseRightButtonDown" Handler="NavigationPanel_Skills_SwitchToCoinDesc_FastSwitch"/>
		</Style>

		<Style x:Key="{x:Type ContextMenu}" TargetType="{x:Type ContextMenu}">
			<Setter Property="OverridesDefaultStyle" Value="True"/>
			<Setter Property="SnapsToDevicePixels" Value="True"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type ContextMenu}">
						<Border Background="{DynamicResource UITheme_EditorContextMenu_Background}" CornerRadius="{DynamicResource UITheme_EditorContextMenu_CornerRadius}" BorderBrush="{DynamicResource UITheme_EditorContextMenu_Border}" BorderThickness="2" Opacity="0.96">
							<StackPanel Orientation="Vertical" IsItemsHost="True" Margin="1.3"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style TargetType="MenuItem">
			<Setter Property="Template" Value="{DynamicResource MenuItemControlTemplate}"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="Margin" Value="0 0 0 0"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">

				</Trigger>
			</Style.Triggers>
		</Style>

		<ControlTemplate x:Key="MenuItemControlTemplate" TargetType="{x:Type MenuItem}">
			<Border x:Name="templateRoot" 
                    BorderBrush="{DynamicResource UITheme_EditorContextMenu_Border}" 
                    BorderThickness="0"
                    CornerRadius="{DynamicResource UITheme_EditorContextMenu_CornerRadius}"
                    SnapsToDevicePixels="True">
				<Grid VerticalAlignment="Center">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="5"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<ContentPresenter ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" Grid.Column="1" ContentStringFormat="{TemplateBinding HeaderStringFormat}" ContentSource="Header" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
					<Popup x:Name="PART_Popup"  AllowsTransparency="True" Focusable="False" IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}" PopupAnimation="{DynamicResource {x:Static SystemParameters.MenuPopupAnimationKey}}" Placement="Bottom">
						<Border x:Name="SubMenuBorder" BorderBrush="{DynamicResource UITheme_EditorContextMenu_Border}" BorderThickness="1" Background="{DynamicResource UITheme_EditorContextMenu_Background}" Padding="0">
							<ScrollViewer x:Name="SubMenuScrollViewer" Style="{DynamicResource {ComponentResourceKey ResourceId=MenuScrollViewer, TypeInTargetAssembly={x:Type FrameworkElement}}}">
								<Grid RenderOptions.ClearTypeHint="Enabled">
									<Canvas HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0">
										<Rectangle x:Name="OpaqueRect" Fill="{Binding Background, ElementName=SubMenuBorder}" Height="{Binding ActualHeight, ElementName=SubMenuBorder}" Width="{Binding ActualWidth, ElementName=SubMenuBorder}"/>
									</Canvas>
									<ItemsPresenter x:Name="ItemsPresenter" KeyboardNavigation.DirectionalNavigation="Cycle" Grid.IsSharedSizeScope="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" KeyboardNavigation.TabNavigation="Cycle"/>
								</Grid>
							</ScrollViewer>
						</Border>
					</Popup>
				</Grid>
			</Border>
			<ControlTemplate.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="BorderBrush" TargetName="templateRoot" Value="{DynamicResource UITheme_EditorContextMenu_Border}"/>
					<Setter Property="BorderThickness" TargetName="templateRoot" Value="0"/>
				</Trigger>

				<Trigger Property="CanContentScroll" SourceName="SubMenuScrollViewer" Value="False">
					<Setter Property="Canvas.Top" TargetName="OpaqueRect" Value="{Binding VerticalOffset, ElementName=SubMenuScrollViewer}"/>
					<Setter Property="Canvas.Left" TargetName="OpaqueRect" Value="{Binding HorizontalOffset, ElementName=SubMenuScrollViewer}"/>
				</Trigger>

				<Trigger Property="IsMouseOver" Value="True">
					<Setter TargetName="templateRoot" Property="Background" Value="{DynamicResource UITheme_EditorContextMenu_BackgroundHighlighted}"/>
				</Trigger>
			</ControlTemplate.Triggers>
		</ControlTemplate>

		<Style TargetType="RichTextBox" x:Key="ContextMenuItem">
			<Setter Property="Foreground" Value="{DynamicResource UITheme_EditorContextMenu_FontColor}"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Margin" Value="-5 4 0 0"/>
			<Setter Property="Width" Value="280"/>
			<Setter Property="Focusable" Value="False"/>
			<Setter Property="IsReadOnly" Value="True"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontFamily" Value="{DynamicResource UITheme_EditorContextMenu_FontFamily}"/>
			<Setter Property="FontWeight" Value="{DynamicResource UITheme_EditorContextMenu_FontWeight}"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">

				</Trigger>
			</Style.Triggers>
		</Style>


		<!-- ass template (Scrollbar for scrollviewer in custom identity preview template) -->
		<Style x:Key="ScrollBarLineButton"
               TargetType="{x:Type RepeatButton}">
			<Setter Property="SnapsToDevicePixels"
                    Value="True"/>
			<Setter Property="OverridesDefaultStyle"
                    Value="True"/>
			<Setter Property="Focusable"
                    Value="False"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type RepeatButton}">
						<Border x:Name="Border"
                                CornerRadius="0"
                                Background="Transparent"
                                BorderThickness="0">
							<VisualStateManager.VisualStateGroups>
								<VisualStateGroup x:Name="CommonStates">
									<VisualState x:Name="Normal"/>
									<VisualState x:Name="MouseOver">
										<Storyboard>
											<ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
												<EasingColorKeyFrame KeyTime="0" Value="#4d4d4d"/>
											</ColorAnimationUsingKeyFrames>
										</Storyboard>
									</VisualState>
								</VisualStateGroup>
							</VisualStateManager.VisualStateGroups>
							<Path x:Name="Arrow"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5 0.5"
                                  Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" >
								<Path.Fill>
									<SolidColorBrush Color="#999999"/>
								</Path.Fill>
								<Path.RenderTransform>
									<ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
								</Path.RenderTransform>
							</Path>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style x:Key="ScrollBarPageButton"
               TargetType="{x:Type RepeatButton}">
			<Setter Property="SnapsToDevicePixels"
                    Value="True"/>
			<Setter Property="OverridesDefaultStyle"
                    Value="True"/>
			<Setter Property="IsTabStop"
                    Value="False"/>
			<Setter Property="Focusable"
                    Value="False"/>

		</Style>
		<Style x:Key="ScrollBarThumb"
               TargetType="{x:Type Thumb}">
			<Setter Property="SnapsToDevicePixels"
                    Value="True"/>
			<Setter Property="OverridesDefaultStyle"
                    Value="True"/>
			<Setter Property="IsTabStop"
                    Value="False"/>
			<Setter Property="Focusable"
                    Value="False"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Thumb}">
						<Border CornerRadius="0"
                                Background="#4d4d4d"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"/>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<ControlTemplate x:Key="VerticalScrollBar"
                         TargetType="{x:Type ScrollBar}">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition MaxHeight="18"/>
					<RowDefinition Height="0.00001*"/>
					<RowDefinition MaxHeight="18"/>
				</Grid.RowDefinitions>
				<Border Grid.RowSpan="3"
                        CornerRadius="0"
                        Background="#2e2e2e"/>
				<RepeatButton Grid.Row="0"
                              Style="{StaticResource ScrollBarLineButton}"
                              Height="18"
                              Command="ScrollBar.LineUpCommand"
                              Content="M 0 4 L 8 4 L 4 0 Z"/>
				<Track x:Name="PART_Track"
                       Grid.Row="1"
                       IsDirectionReversed="True">
					<Track.DecreaseRepeatButton>
						<RepeatButton Style="{StaticResource ScrollBarPageButton}"
                              Command="ScrollBar.PageUpCommand"/>
					</Track.DecreaseRepeatButton>
					<Track.Thumb>
						<Thumb Style="{StaticResource ScrollBarThumb}"
                               Margin="2.5 -1 3 -1">
						</Thumb>
					</Track.Thumb>
					<Track.IncreaseRepeatButton>
						<RepeatButton Style="{StaticResource ScrollBarPageButton}"
                              Command="ScrollBar.PageDownCommand"/>
					</Track.IncreaseRepeatButton>
				</Track>
				<RepeatButton Grid.Row="2"
                          Style="{StaticResource ScrollBarLineButton}"
                          Height="18"
                          Command="ScrollBar.LineDownCommand"
                          Content="M 0 0 L 4 4 L 8 0 Z"/>
			</Grid>
		</ControlTemplate>
		<ControlTemplate x:Key="HorizontalScrollBar"
                         TargetType="{x:Type ScrollBar}">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition MaxWidth="18"/>
					<ColumnDefinition Width="0.00001*"/>
					<ColumnDefinition MaxWidth="18"/>
				</Grid.ColumnDefinitions>
				<Border Grid.ColumnSpan="3"
                        Background="#2e2e2e"/>
				<RepeatButton Grid.Column="0"
                              Style="{StaticResource ScrollBarLineButton}"
                              Width="18"
                              Command="ScrollBar.LineLeftCommand"
                              Content="M 4 0 L 4 8 L 0 4 Z"/>
				<Track x:Name="PART_Track"
                       Grid.Column="1"
                       IsDirectionReversed="False">
					<Track.DecreaseRepeatButton>
						<RepeatButton Style="{StaticResource ScrollBarPageButton}"
                              Command="ScrollBar.PageLeftCommand"/>
					</Track.DecreaseRepeatButton>
					<Track.Thumb>
						<Thumb Style="{StaticResource ScrollBarThumb}"
                               Margin="-1 2.5 -1 3">
						</Thumb>
					</Track.Thumb>
					<Track.IncreaseRepeatButton>
						<RepeatButton Style="{StaticResource ScrollBarPageButton}"
                                      Command="ScrollBar.PageRightCommand"/>
					</Track.IncreaseRepeatButton>
				</Track>
				<RepeatButton Grid.Column="2"
                              Style="{StaticResource ScrollBarLineButton}"
                              Width="18"
                              Command="ScrollBar.LineRightCommand"
                              Content="M 0 0 L 4 4 L 0 8 Z"/>
			</Grid>
		</ControlTemplate>
		<Style x:Key="SeriousScrollBar"
               TargetType="{x:Type ScrollBar}">
			<Setter Property="SnapsToDevicePixels" Value="True"/>
			<Setter Property="OverridesDefaultStyle" Value="True"/>
			<Setter Property="ContextMenu" Value="{x:Null}"/>
			<Style.Triggers>
				<Trigger Property="Orientation"
                         Value="Horizontal">
					<Setter Property="Width"
                            Value="Auto"/>
					<Setter Property="Height"
                            Value="18"/>
					<Setter Property="Template"
                            Value="{StaticResource HorizontalScrollBar}"/>
				</Trigger>
				<Trigger Property="Orientation"
                         Value="Vertical">
					<Setter Property="Width"
                            Value="18"/>
					<Setter Property="Height"
                            Value="Auto"/>
					<Setter Property="Template"
                            Value="{StaticResource VerticalScrollBar}"/>
				</Trigger>
			</Style.Triggers>
		</Style>
		<!--#endregion-->

		<!--#region SLIDER STYLE TEMPLATE WHY ITS SO HUGE -->

		<!--Slider main background-->
		<Style x:Key="RepeatButtonTransparent" TargetType="{x:Type RepeatButton}">
			<Setter Property="OverridesDefaultStyle" Value="true"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Focusable" Value="false"/>
			<Setter Property="IsTabStop" Value="false"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type RepeatButton}">
						<Rectangle Fill="{TemplateBinding Background}" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"/>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!--#region Slider colors-->
		<SolidColorBrush x:Key="UITheme_SliderThumb_DefaultBackground" Color="#b8b3b1"/>
		<SolidColorBrush x:Key="UITheme_SliderThumb_DefaultBorder" Color="#888381"/>

		<SolidColorBrush x:Key="UITheme_SliderThumb_HighlightedBackground" Color="#888381"/>
		<SolidColorBrush x:Key="UITheme_SliderThumb_HighlightedBorder" Color="#888381"/>

		<SolidColorBrush x:Key="UITheme_SliderThumb_PressedBackground" Color="#888381"/>
		<SolidColorBrush x:Key="UITheme_SliderThumb_PressedBorder" Color="#888381"/>

		<CornerRadius x:Key="UITheme_SliderThumb_CornerRadius">0</CornerRadius>
		<Thickness x:Key="UITheme_SliderThumb_BorderThickness">0.8</Thickness>
		<sys:Double x:Key="UITheme_SliderThumb_Width">8</sys:Double>
		<sys:Double x:Key="UITheme_SliderThumb_Height">12</sys:Double>
		<sys:Double x:Key="UITheme_SliderThumb_Scale">1.45</sys:Double>

		<sys:Double x:Key="UITheme_SliderLine_Height">2.5</sys:Double>
		<Thickness x:Key="UITheme_SliderLine_BorderThickness">1.45</Thickness>

		<SolidColorBrush x:Key="UITheme_SliderLine_Background" Color="#b0adac"/>
		<!-- Slider line color -->
		<SolidColorBrush x:Key="UITheme_SliderLine_Border" Color="#a6a09e"/>
		<!-- Slider line border color -->

		<SolidColorBrush x:Key="SliderThumb.Static.Foreground" Color="Green"/>
		<SolidColorBrush x:Key="SliderThumb.Disabled.Background" Color="#FFF0F0F0"/>
		<SolidColorBrush x:Key="SliderThumb.Disabled.Border" Color="#FFD9D9D9"/>
		<!--#endregion-->

		<!--#region some sliders -->
		<ControlTemplate x:Key="SliderThumbHorizontalDefault" TargetType="{x:Type Thumb}">
			<Grid HorizontalAlignment="Center" VerticalAlignment="Center">
				<Border x:Name="grip"
                        Background="{StaticResource UITheme_SliderThumb_DefaultBackground}"
                        BorderBrush="{StaticResource UITheme_SliderThumb_DefaultBorder}"
                        BorderThickness="{StaticResource UITheme_SliderThumb_BorderThickness}"
                        CornerRadius="{StaticResource UITheme_SliderThumb_CornerRadius}"
                        Width="{StaticResource UITheme_SliderThumb_Width}"
                        Height="{StaticResource UITheme_SliderThumb_Height}"
                        RenderTransformOrigin="0.5 0.5">
					<Border.RenderTransform>
						<ScaleTransform ScaleX="{StaticResource UITheme_SliderThumb_Scale}" ScaleY="{StaticResource UITheme_SliderThumb_Scale}"/>
					</Border.RenderTransform>
				</Border>
			</Grid>
			<ControlTemplate.Triggers>
				<Trigger Property="IsMouseOver" Value="true">
					<Setter Property="Background" TargetName="grip" Value="{StaticResource UITheme_SliderThumb_HighlightedBackground}"/>
					<Setter Property="BorderBrush" TargetName="grip" Value="{StaticResource UITheme_SliderThumb_HighlightedBorder}"/>
				</Trigger>
				<Trigger Property="IsDragging" Value="true">
					<Setter Property="Background" TargetName="grip" Value="{StaticResource UITheme_SliderThumb_PressedBackground}"/>
					<Setter Property="BorderBrush" TargetName="grip" Value="{StaticResource UITheme_SliderThumb_PressedBorder}"/>
				</Trigger>
				<Trigger Property="IsEnabled" Value="false">
					<Setter Property="Background" TargetName="grip" Value="{StaticResource SliderThumb.Disabled.Background}"/>
					<Setter Property="BorderBrush" TargetName="grip" Value="{StaticResource SliderThumb.Disabled.Border}"/>
				</Trigger>
			</ControlTemplate.Triggers>
		</ControlTemplate>
		<ControlTemplate x:Key="SliderThumbHorizontalTop" TargetType="{x:Type Thumb}">
			<Grid HorizontalAlignment="Center" UseLayoutRounding="True" VerticalAlignment="Center">
				<Path x:Name="grip" Data="M 0,6 C0,6 5.5,0 5.5,0 5.5,0 11,6 11,6 11,6 11,18 11,18 11,18 0,18 0,18 0,18 0,6 0,6 z" Fill="{StaticResource UITheme_SliderThumb_DefaultBackground}" Stroke="{StaticResource UITheme_SliderThumb_DefaultBorder}" SnapsToDevicePixels="True" Stretch="Fill" StrokeThickness="1" UseLayoutRounding="True" VerticalAlignment="Center"/>
			</Grid>
			<ControlTemplate.Triggers>
				<Trigger Property="IsMouseOver" Value="true">
					<Setter Property="Fill" TargetName="grip" Value="{StaticResource UITheme_SliderThumb_HighlightedBackground}"/>
					<Setter Property="Stroke" TargetName="grip" Value="{StaticResource UITheme_SliderThumb_HighlightedBorder}"/>
				</Trigger>
				<Trigger Property="IsDragging" Value="true">
					<Setter Property="Fill" TargetName="grip" Value="{StaticResource UITheme_SliderThumb_PressedBackground}"/>
					<Setter Property="Stroke" TargetName="grip" Value="{StaticResource UITheme_SliderThumb_PressedBorder}"/>
				</Trigger>
				<Trigger Property="IsEnabled" Value="false">
					<Setter Property="Fill" TargetName="grip" Value="{StaticResource SliderThumb.Disabled.Background}"/>
					<Setter Property="Stroke" TargetName="grip" Value="{StaticResource SliderThumb.Disabled.Border}"/>
				</Trigger>
			</ControlTemplate.Triggers>
		</ControlTemplate>
		<ControlTemplate x:Key="SliderThumbHorizontalBottom" TargetType="{x:Type Thumb}">
			<Grid HorizontalAlignment="Center" UseLayoutRounding="True" VerticalAlignment="Center">
