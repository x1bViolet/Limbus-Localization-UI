				<ResourceDictionary Source="/Common UI Styles.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<FontFamily x:Key="BebasKaiUniversal">pack://application:,,,/UI/Fonts/#Bebas Neue Bold</FontFamily>

			

			<Style x:Key="ContextMenuItem_r" TargetType="Terminus:UITranslation_Rose">
