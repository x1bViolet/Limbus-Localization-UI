										<Terminus:UITranslation_Rose
											x:Name="STE_UnsavedChangesWindow_Cancel"
											FontFamily="/UI/Fonts/#EXCELSIOR SANS"
											FontSize="25"
											PerfectVerticalAlign="True"
											RichText="Остаться"
