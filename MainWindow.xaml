											<Style TargetType="{x:Type Terminus:UITranslation_Rose}">
												<Setter Property="Padding" Value="0 2.5 0 2.5" />
												<Setter Property="Foreground" Value="{DynamicResource Theme:UIText.Foreground}" />
											</Style>
										</Limbus:JsonTextEditor.Resources>
									</Limbus:JsonTextEditor>
								</Border>


								<!--    383 def    -->
								<Grid x:Name="PreviewLayouts" x:Uid="All text preview layouts is there" Grid.Row="1" Height="383">













