<Window
	x:Class="LC_Localization_Task_Absolute.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Limbus="clr-namespace:LC_Localization_Task_Absolute.Limbus_Integration"
	xmlns:T="clr-namespace:LC_Localization_Task_Absolute.BaseUIElements"
	xmlns:TC="clr-namespace:LC_Localization_Task_Absolute.BaseUIElements.PreviewCreator"
	xmlns:Terminus="clr-namespace:LC_Localization_Task_Absolute.UITranslationHandlers"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
	Title="{DynamicResource Caption_MainWindow}"
	Width="1000"
	Height="550"
	MinWidth="710.5"
	MinHeight="425"
	MaxWidth="1000"
	AllowsTransparency="True"
	Loaded="Window_Loaded"
	PreviewKeyDown="Window_PreviewKeyDown"
	PreviewKeyUp="Window_PreviewKeyUp"
	PreviewMouseDown="Window_PreviewMouseDown"
	ResizeMode="CanResizeWithGrip"
	SizeChanged="Window_SizeChanged"
	Topmost="True"
	WindowStartupLocation="CenterScreen"
	WindowStyle="None">
	<Window.Triggers>
		<EventTrigger RoutedEvent="Window.Loaded">
			<BeginStoryboard>
				<Storyboard>
					<DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" Duration="0:0:0.36" />
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</Window.Triggers>
	<WindowChrome.WindowChrome>
		<WindowChrome x:Name="CurrentWindowChrome" CaptionHeight="1" ResizeBorderThickness="10" />
	</WindowChrome.WindowChrome>

	<Window.Resources>

		<ResourceDictionary>

			<FontFamily x:Key="BebasKaiUniversal">pack://application:,,,/UI/Fonts/#Bebas Neue Bold</FontFamily>

			<ScaleTransform x:Key="XReversed" ScaleX="-1" />

			<Style x:Key="ContextMenuItem_r" TargetType="{x:Type Terminus:UITranslation_Rose}">
				<Setter Property="Padding" Value="0 2.5 0 2.5" />
			</Style>



			<Style x:Key="ButtonDefaultDeskHighlightableDefault" TargetType="Border">
				<Setter Property="Background" Value="#202020" />
				<Setter Property="BorderBrush" Value="#393939" />
				<Setter Property="CornerRadius" Value="1" />
				<Setter Property="BorderThickness" Value="1" />
				<Style.Triggers>
					<Trigger Property="IsMouseOver" Value="True">
						<Setter Property="Background" Value="#272529" />
					</Trigger>
				</Style.Triggers>
			</Style>




			<!--    Used by ideneity/e.g.o preview creator too    -->
			<Style x:Key="CoinDesc" TargetType="{x:Type Limbus:TMProEmitter}">
				<Setter Property="FontSize" Value="20" />
				<Setter Property="LineHeight" Value="27" />
				<Setter Property="FontType" Value="Context" />
				<Setter Property="TextProcessingMode" Value="Skills" />
				<EventSetter Event="PreviewMouseRightButtonDown" Handler="FastSwitch_ToSkillCoinDesc" />
			</Style>








		</ResourceDictionary>

	</Window.Resources>

	<Grid x:Name="MainBackgroundGrid" Background="#000000">
		<!--        -->

		<Border x:Name="MainWindowContentControl" BorderBrush="#3A3A3A" BorderThickness="1">

			<Grid Background="{Binding ElementName=BackgroundImageShadowingColor, Path=Background}">
				<Grid.RowDefinitions>
					<RowDefinition Height="34" />
					<RowDefinition />
				</Grid.RowDefinitions>
				<Grid x:Name="TitleBar" Grid.Row="0" Background="{DynamicResource Theme:TitleBar.Background}">

					<Border Uid="||| Drag move area |||" Background="Transparent" ClipToBounds="True" MouseLeftButtonDown="Window_DragMove">
						<Terminus:UITranslation_Rose x:Name="STE_Title" HorizontalAlignment="Left" FontSize="23" Foreground="{DynamicResource Theme:TitleBar.Titles}" UID="[Main UI] * Program Title" />
					</Border>

					<StackPanel Uid="||| Title bar buttons |||" HorizontalAlignment="Right" Background="Transparent" Orientation="Horizontal">

						<StackPanel.Resources>
							<Style BasedOn="{StaticResource Base:TitleBar.Button}" TargetType="{x:Type Button}" />
						</StackPanel.Resources>


						<StackPanel.Triggers>
							<!--    Temporary remove invisible resize border when mouse is over    -->
							<EventTrigger RoutedEvent="MouseEnter">
								<BeginStoryboard>
									<Storyboard>
										<ThicknessAnimation Storyboard.TargetName="CurrentWindowChrome" Storyboard.TargetProperty="ResizeBorderThickness" From="10" To="0" Duration="0:0:0" />
									</Storyboard>
								</BeginStoryboard>
							</EventTrigger>
							<EventTrigger RoutedEvent="MouseLeave">
								<BeginStoryboard>
									<Storyboard>
										<ThicknessAnimation Storyboard.TargetName="CurrentWindowChrome" Storyboard.TargetProperty="ResizeBorderThickness" From="0" To="10" Duration="0:0:0" />
									</Storyboard>
								</BeginStoryboard>
							</EventTrigger>
						</StackPanel.Triggers>

						<Button Padding="0 9.5 0 0" Click="Minimize" Content="" />
						<Button x:Name="MakeLimbusPreviewScan" Click="SavePreviewlayoutScan_TitlebarButtonClick" Content="">

							<Button.ToolTip>
								<ToolTip Background="#E0676767" HorizontalOffset="20">
									<Terminus:UITranslation_Rose Foreground="White" RichText="Export preview to PNG (To [⇲] Assets Directory\Scans directory)" UID="[Main UI] * Export Preview as PNG Tooltip" />
								</ToolTip>
							</Button.ToolTip>
						</Button>
						<Button Click="OpenDisplayInfoManager" Content="">
							<Button.ToolTip>
								<ToolTip Background="#E0676767" HorizontalOffset="20">
									<Terminus:UITranslation_Rose Foreground="White" RichText="Open Skills Display Info manager" UID="[Skills DI Manager] * Title bar button tooltip" />
								</ToolTip>
							</Button.ToolTip>
						</Button>
						<Button Click="SwitchUIQuestion" Content="">
							<Button.ToolTip>
								<ToolTip Background="#E0676767" HorizontalOffset="20">
									<Terminus:UITranslation_Rose Foreground="White" RichText="Switch UI to Identity/E.G.O Preview creator" UID="[C] * Title bar button tooltip" />
								</ToolTip>
							</Button.ToolTip>
						</Button>
						<Button Click="OpenSettings" Content="" />
						<Button Click="Shutdown" Content="" IsDefault="False" />

					</StackPanel>
				</Grid>


				<!--    MAIN THING EXCEPT IDENTITY PREVIEW CREATOR    -->
				<Grid x:Name="LimbusJsonTextEditor" Grid.Row="1" Visibility="Visible">





