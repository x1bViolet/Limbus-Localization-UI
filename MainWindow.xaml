	Width="1535"
	Height="816"
	MinWidth="710.5"
	MinHeight="425"
	AllowsTransparency="True"
	Loaded="Window_Loaded"
	Opacity="1"
	PreviewKeyDown="Window_PreviewKeyDown"
	PreviewKeyUp="Window_PreviewKeyUp"
