<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<SolidColorBrush x:Key="ComboBoxItem.Itemsview.Background" Color="#2e2e2e" />
	<SolidColorBrush x:Key="ComboBoxItem.Itemsview.Border" Color="#2e2e2e" />

	<SolidColorBrush x:Key="ComboBoxItem.Itemsview.Hover.Background" Color="#454545" />
	<SolidColorBrush x:Key="ComboBoxItem.Itemsview.Hover.Border" Color="#a4a4a4" />
	
	<SolidColorBrush x:Key="ComboBoxItem.Itemsview.Selected.Background" Color="#575757" />
	<SolidColorBrush x:Key="ComboBoxItem.Itemsview.Selected.Border" Color="#a4a4a4" />
	
	<SolidColorBrush x:Key="ComboBoxItem.Itemsview.Selected.Hover.Background" Color="#575757" />
	<SolidColorBrush x:Key="ComboBoxItem.Itemsview.Selected.Hover.Border" Color="#a4a4a4" />

	<SolidColorBrush x:Key="ComboBoxItem.Itemsview.LatestHover.Border" Color="#6e6e6e" />
	
	
	<Style TargetType="{x:Type ComboBoxItem}">
		<Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
		<Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
		<Setter Property="Background" Value="{DynamicResource ComboBoxItem.Itemsview.Background}" />
		<Setter Property="BorderBrush" Value="{DynamicResource ComboBoxItem.Itemsview.Border}" />
		<Setter Property="FocusVisualStyle" Value="{x:Null}" />
		<Setter Property="SnapsToDevicePixels" Value="True" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="Padding" Value="1 1" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ComboBoxItem}">
					<Border
						x:Name="ComboBoxItemContainer_Border"
						Padding="{TemplateBinding Padding}"
						Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}"
						SnapsToDevicePixels="True">
						<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" SnapsToDevicePixels="True" />
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsEnabled" Value="False">
							<Setter TargetName="ComboBoxItemContainer_Border" Property="TextElement.Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
						</Trigger>

						<Trigger Property="IsSelected" Value="True">
							<Setter TargetName="ComboBoxItemContainer_Border" Property="Background" Value="{DynamicResource ComboBoxItem.Itemsview.Selected.Background}" />
							<Setter TargetName="ComboBoxItemContainer_Border" Property="BorderBrush" Value="{DynamicResource ComboBoxItem.Itemsview.Selected.Border}" />
						</Trigger>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="ComboBoxItemContainer_Border" Property="Background" Value="{DynamicResource ComboBoxItem.Itemsview.Hover.Background}" />
							<Setter TargetName="ComboBoxItemContainer_Border" Property="BorderBrush" Value="{DynamicResource ComboBoxItem.Itemsview.Hover.Border}" />
						</Trigger>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="IsSelected" Value="True" />
								<Condition Property="IsMouseOver" Value="True" />
							</MultiTrigger.Conditions>
							<Setter TargetName="ComboBoxItemContainer_Border" Property="Background" Value="{DynamicResource ComboBoxItem.Itemsview.Selected.Hover.Background}" />
							<Setter TargetName="ComboBoxItemContainer_Border" Property="BorderBrush" Value="{DynamicResource ComboBoxItem.Itemsview.Selected.Hover.Border}" />
						</MultiTrigger>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="IsSelected" Value="False" />
								<Condition Property="IsMouseOver" Value="False" />
								<Condition Property="IsKeyboardFocused" Value="True" />
							</MultiTrigger.Conditions>
							<Setter TargetName="ComboBoxItemContainer_Border" Property="BorderBrush" Value="{DynamicResource ComboBoxItem.Itemsview.LatestHover.Border}" />
						</MultiTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>